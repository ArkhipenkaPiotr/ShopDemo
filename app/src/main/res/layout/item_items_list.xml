<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_item_list_image_view"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:maxWidth="150dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/item_item_list_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_item_list_image_view"
            tools:text="Item Name"

            android:layout_marginTop="50dp"
            android:textSize="25sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/item_item_list_price_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_item_list_image_view"
            android:layout_below="@id/item_item_list_name_text_view"
            tools:text="Price"

            android:layout_marginTop="50dp"
            android:textSize="30sp"
            android:textAlignment="center"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>